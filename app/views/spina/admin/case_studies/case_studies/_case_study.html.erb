<div id="<%= dom_id(case_study) %>" class="<%= dom_class(case_study) %> border-b border-gray-200 flex items-center justify-between space-x-8 pr-2">
  <%= link_to spina.edit_admin_case_studies_case_study_path(case_study.id), class: 'flex items-center text-spina text-sm p-4 hover:text-spina-dark font-medium' do %>
    <div>
      <%= case_study.title %>
      <div class="text-gray-400 text-xs"><%= time_ago_in_words(case_study.created_at) %> ago</div>
    </div>
  <% end %>
  <div class="flex-1"></div>
  <div>
    <% if case_study.draft? %>
      <span class="text-sm text-gray-400"><%=t 'spina.case_studies.case_studies.concept' %></span>
    <% end %>
  </div>
  <div>
    <%= link_to spina.edit_admin_case_studies_case_study_path(case_study.id), class: "btn btn-default px-3" do %>
      <%= heroicon('pencil', style: :solid, class: 'w-4 h-4') %>
    <% end %>
  </div>
</div>
