- content_for :application do
  %header#header
    #header_actions
      = yield(:header_actions) if content_for?(:header_actions)

    .breadcrumbs= render_breadcrumbs separator: '<div class="divider"></div>'

    %nav#secondary.tabs
      %ul
        %li{class: ('active' if controller_name == 'testimonials' and action_name == 'index')}
          = link_to t('spina.case_studies.testimonials.index'), spina.admin_case_studies_testimonials_path
  = yield

= render template: "layouts/spina/admin/admin"
